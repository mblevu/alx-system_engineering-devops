global
    log /dev/log    local0
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners

defaults
    log     global
    mode    http
    option  httplog
    timeout connect 20
    timeout client  30
    timeout server  30

frontend mblevu-tech-frontend
    bind *:80
    bind *:443 ssl crt /etc/letsencrypt/www.mblevu.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend mblevu-tech-backend

backend mblevu-tech-backend
    server web-01 54.146.65.163:80 check
    server web-02 3.85.177.42:80 check
